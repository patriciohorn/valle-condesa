---
import { Image } from "astro:assets";

import Logo from '../assets/logo-vc.svg'

const leftNavItems = [
  {label: 'Macroproyecto', ref: '/macroproyecto'}, 
  {label: 'Habitacional', ref: '/habitacional'}, 
  {label: 'Comercial', ref: '/comercial'}, 
]
const rightNavItems = [
  {label: 'Industrial', ref: '/industrial'}, 
  {label: 'Parque Condesa', ref: '/gran-parque-condesa'}, 
  {label: 'Contacto', ref: '/contacto'}, 
]

const pathname = Astro.url.pathname
---


<nav class="absolute top-0 left-0 w-full z-10 py-6 px-5 md:px-0">
   <div class="flex items-center max-w-7xl mx-auto text-white">
      <!-- Left Side NavBar -->
     <ul class="hidden lg:flex lg:justify-start lg:gap-x-8 lg:flex-1">
      {leftNavItems.map((item) => (
        <li>
          <a href={item.ref} class={`${pathname === item.ref ? 'border-white' : 'border-transparent'} px-5 py-2 border  hover:border-white whitespace-nowrap transition-all duration-200 ease-out rounded-full`}>{item.label}</a>
        </li>
        
      ))}
     
     </ul>


    
   
     <!-- Logo -->
     <div class="shrink-0">
      <a href="/">
        <Image src={Logo} alt="logo Valle Condesa" class=" h-12 md:h-16 w-auto"/>
      </a>
     </div>

      <!-- Hamburger Button (mobile only) -->
    <button
      id="mobile-menu-btn"
      class="lg:hidden ml-auto p-2 rounded-md hover:bg-white/10 transition-colors duration-200"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <!-- Menu Icon -->
      <svg id="icon-menu" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/>
      </svg>
      <!-- X Icon -->
      <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="hidden">
        <path d="M18 6 6 18"/><path d="m6 6 12 12"/>
      </svg>
    </button>
     <!-- Right Side NavBar -->
     <ul class="hidden lg:flex lg:justify-end lg:gap-x-8 lg:flex-1">
       {rightNavItems.map((item) => (
       <li>
          <a href={item.ref} class={`${pathname === item.ref ? 'border-white' : 'border-transparent'} px-5 py-2 border  hover:border-white whitespace-nowrap transition-all duration-200 ease-out rounded-full`}>{item.label}</a>
        </li>       
      ))}
     </ul>


   </div>
</nav>