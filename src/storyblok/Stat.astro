---
import { Image } from "astro:assets"
const {blok} = Astro.props
---
<div class="flex items-start gap-x-8">
  <Image src={blok.icon.filename} alt="" class="mt-2 shrink-0" inferSize/>
  <div class="flex flex-col gap-y-2">
    <p class=" text-6xl md:text-[80px]">{blok.number}</p>
    <p class="text-lg md:text-xl md:pr-20">{blok.label}</p>
  </div>

</div>
