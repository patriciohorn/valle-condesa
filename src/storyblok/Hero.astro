---
import { Image } from "astro:assets"

const {blok} = Astro.props
---


<section class="min-h-screen relative flex flex-col justify-end">
  <Image src={blok.imagen.filename} alt="Render representativo de Valle Condesa" inferSize class="absolute inset-0 w-full h-full object-cover -z-10"/>
  <div class="bg-linear-to-t from-black/40 to-transparent absolute inset-0 -z-10"></div>
  <div class="container mx-auto max-w-4xl md:max-w-7xl px-5 pb-16 md:pb-24">
    <h1 class="text-white text-4xl md:text-8xl font-bold">{blok.heading}</h1>
    <div class="mt-5 md:mt-6 text-gray-100 text-base md:text-xl max-w-[35em]">{blok.subheading}</div>
  </div>
</section>