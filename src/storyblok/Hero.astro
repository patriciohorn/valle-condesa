---
import { Image } from "astro:assets"
import Banner from "./Banner.astro"
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const {blok} = Astro.props
---


<section>
  <div class="h-svh relative flex flex-col justify-end">
    <Image src={blok.imagen.filename} alt="Render representativo de Valle Condesa" inferSize class="absolute inset-0 w-full h-full object-cover -z-10" loading="eager" fetchpriority="high"/>
  <!-- Side overlay -->
  <div class="bg-linear-to-r from-black/60 via-transparent to-transparent absolute top-0 inset-0 -z-10"></div>
  <!-- Top overlay -->
  <div class="bg-linear-to-b from-black/80 via-transparent to-transparent absolute bottom-0 inset-0 -z-10"></div>
<!-- Bottom overlay -->
  <div class="bg-linear-to-t from-black/60 via-transparent to-transparent absolute bottom-0 inset-0 -z-10"></div>

  <!-- Content -->
  <div class="container mx-auto max-w-4xl md:max-w-7xl px-5 md:px-0 pb-16 md:pb-24">
    <div class="md:max-w-1/2 rounded-2xl">
      <span class="mb-4 inline-block text-base md:text-sm text-slate-200 uppercase tracking-wide">{blok.eyebrow}</span>
      <h1 class=" text-white text-4xl md:text-6xl font-semibold">{blok.heading}</h1>
      <div class="mt-5 md:mt-6 text-slate-200 text-lg md:text-2xl">{blok.subheading}</div>
    </div>
    {blok.stats?.map((stat: any) => {
        return <StoryblokComponent blok={stat}/>
      })}
    
  </div>

  </div>
  
  <Banner/>
</section>