---
import Image from "astro/components/Image.astro"
import { storyblokEditable, renderRichText } from '@storyblok/astro';

const {blok} = Astro.props
const renderedRichText = renderRichText(blok.description)
---

<section class=" flex flex-col justify relative">
 
  <div class="container max-w-7xl mx-auto px-5 md:px-0">
    <h2>{blok.title}</h2>
    <div class="text-lg md:text-xl md:leading-[1.6]">
        <Fragment set:html={renderedRichText} />
    </div>
</div>
   
  

    
</section>