---
import { storyblokEditable, renderRichText } from '@storyblok/astro';

const {blok} = Astro.props
const renderedRichText = renderRichText(blok.content)
---


<section class="">
  <div class="container px-5 md:px-0 mx-auto md:max-w-7xl">    
    <div class="grid md:grid-cols-2">
      <div class="">
        <h2 class="mb-4 md:mb-6 text-3xl md:text-[2.5rem]">{blok.headline}</h2>
        <div class="text-lg md:text-xl md:leading-[1.6]">
          <Fragment set:html={renderedRichText} />
        </div>
      </div>
      <div class=""></div>
    </div>
    
    
    
  </div>
</section>