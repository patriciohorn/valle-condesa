---
import { storyblokEditable, renderRichText } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const {blok} = Astro.props
const renderedRichText = renderRichText(blok.description)
---


<section class="">
  <div class="container px-5 md:px-0 mx-auto md:max-w-7xl">    
     <div class="max-w-3xl mb-20">
        {blok.eyebrow && <p class="mb-4 text-sm text-accent">{blok.eyebrow}</p> }
        <h2 class="mb-4 md:mb-6 text-3xl md:text-[2.5rem]">{blok.headline}</h2>
        <div class="text-lg md:text-xl md:leading-[1.6]">
          <Fragment set:html={renderedRichText} />
        </div>
      </div>
      {blok.content && blok.content[0].features && 
      <div class="grid md:grid-cols-3 gap-12">
        {blok.content[0].features?.map((card : any) => {
        return (<StoryblokComponent blok={card}/>)
      })}
      </div>
      
      }
    </div>
</section>